<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cocktail Recipe</title>
  <link rel="stylesheet" href="/public/styles/main.css">
  <style>
    /* Add some basic styles for carousel and cocktail section */
    .carousel {
      position: relative;
      max-width: 100%;
      margin: 20px auto;
      overflow: hidden;
    }

    .carousel-images {
      display: flex;
      transition: transform 0.5s ease;
    }

    .carousel-images img {
      width: 100%;
      display: block;
    }

    .prev, .next {
      position: absolute;
      top: 50%;
      background-color: #35D2CB;
      border: none;
      color: white;
      padding: 10px;
      cursor: pointer;
      z-index: 10;
      transform: translateY(-50%);
    }

    .prev {
      left: 10px;
    }

    .next {
      right: 10px;
    }

    .cocktail {
      text-align: center;
      margin: 20px auto;
    }

    .cocktail img {
      max-width: 100%;
      height: auto;
      border-radius: 10px;
    }

    .cocktail ul {
      list-style-type: none;
      padding: 0;
    }

    .cocktail li {
      margin: 5px 0;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Random Cocktail Recipe</h1>

    <!-- Carousel Section -->
    <div class="carousel">
      <div class="carousel-images">
        <img src="/images/cocktail01.png" alt="Cocktail 1">
        <img src="/images/cocktail02.png" alt="Cocktail 2">
        <img src="/images/cocktail03.png" alt="Cocktail 3">
        <img src="/images/cocktail04.png" alt="Cocktail 4">
        <img src="/images/cocktail05.png" alt="Cocktail 5">
      </div>
      <button class="prev">&#10094;</button>
      <button class="next">&#10095;</button>
    </div>

    <!-- Cocktail Information Section -->
    <div class="cocktail">
      <img src="<%= cocktail.strDrinkThumb %>" alt="<%= cocktail.strDrink %>">
      <h2><%= cocktail.strDrink %></h2>
      <p><strong>Category:</strong> <%= cocktail.strCategory %></p>
      <p><strong>Instructions:</strong> <%= cocktail.strInstructions %></p>
      <h3>Ingredients:</h3>
      <ul>
        <% for (let i = 1; i <= 15; i++) { %>
          <% if (cocktail[`strIngredient${i}`]) { %>
            <li><%= cocktail[`strIngredient${i}`] %> - <%= cocktail[`strMeasure${i}`] %></li>
          <% } %>
        <% } %>
      </ul>
    </div>
  </div>

  <!-- Carousel JavaScript -->
  <script>
    const carouselImages = document.querySelector('.carousel-images');
    const images = carouselImages.children;
    let index = 0;

    function showImage(newIndex) {
      if (newIndex >= images.length) index = 0;
      else if (newIndex < 0) index = images.length - 1;
      else index = newIndex;
      carouselImages.style.transform = `translateX(${-index * 100}%)`;
    }

    document.querySelector('.prev').addEventListener('click', () => showImage(index - 1));
    document.querySelector('.next').addEventListener('click', () => showImage(index + 1));
  </script>
</body>
</html>
