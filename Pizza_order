import csv

print("Thank you for choosing Python Pizza Deliveries!")

order_id = {}

while True:
    name = input("What is your name? Do you want to order a pizza? (Enter 'quit' to stop): ")
    if name.lower() == 'quit':
        break

    size = input("What size pizza do you want? S, M, or L? ")
    add_pepperoni = input("Do you want pepperoni? Y or N? ")
    extra_cheese = input("Do you want extra cheese? Y or N? ")
    drink = input("Do you want add a drink? Y or N? ")
    order_id[name] = {
        'size': size,
        'add_pepperoni': add_pepperoni,
        'extra_cheese': extra_cheese,
        'drink': drink
    }

bill = 0
if size == "S":
    bill += 15
elif size == "M":
    bill += 20
else:
    bill += 25

if add_pepperoni == "Y":
    if size == "S":
        bill += 2
    else:
        bill += 3

if extra_cheese == "Y":
    bill += 1

if drink == "Y":
    bill += 3

# Save the entry to the CSV file
with open('pizza_delivery.csv', mode='a', newline='') as file:
    writer = csv.DictWriter(file, fieldnames=['size', 'add_pepperoni', 'extra_cheese', 'drink', 'name'])
    if file.tell() == 0:  # Check if file is empty
        writer.writeheader()
    writer.writerow({'name': name, 'size': size, 'add_pepperoni': add_pepperoni, 'extra_cheese': extra_cheese, 'drink': drink})

print(f"Your final bill is: ${bill}. Thank you for choosing Python Pizza Deliveries {name}.")




